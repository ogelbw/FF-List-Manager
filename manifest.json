{
    "manifest_version": 2,
    "name": "List Manager",
    "version": "5.0.0",
    "description": "A simple Firefox extension to save and manage lists.",
    "permissions": [
      "storage"
    ],
    "browser_action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
    "icons": {
      "48": "icons/icon48.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"]
    }],
    "content_security_policy": "script-src 'self'; object-src 'self';"
  }
  
